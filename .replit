modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Obsidian Plugin Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Obsidian Plugin Info"

[[workflows.workflow]]
name = "Obsidian Plugin Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "Obsidian Plugin Info"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
cat manifest.json && echo -e \"

The plugin has been built successfully. To install in Obsidian:
1. Copy main.js, manifest.json, and styles.css to your Obsidian plugins folder
2. Enable the plugin in Obsidian settings\""""

[deployment]
run = ["sh", "-c", "npm install && npm run build"]
